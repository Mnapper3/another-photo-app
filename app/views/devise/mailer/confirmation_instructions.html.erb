<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="initial-scale=1.0">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
</head>
<body> 

<%= t('.greeting', recipient: @resource.email, default: "Welcome #{@resource.email}!") %>

<%= t('.instruction', default: 'You can confirm your account email through the link below:') %>

<%= link_to t('.action', default: 'Confirm my account'), confirmation_url(@resource, confirmation_token: @token, locale: I18n.locale), class: "btn btn-primary" %>

</body>
</html>


